<VatRecipes>
<recipeGroup name="Fuel" >
	
	<!-- Refined_Fuel Production -->
	
	<recipe name="Refined_Fuel" energyCost="200" allowMissing="true" >
      <input>
        <itemStack modID="minecraft" itemName="gravel" slot="0" multiplier="1" />
        <fluidStack modID="immersivepetroleum" name="gasoline" multiplier="4" />
		<fluidStack modID="immersivepetroleum" name="diesel" multiplier="4" />
      </input>
      <output>
        <fluidStack modID="ThermalFoundation" name="fuel" />
      </output>
    </recipe>
	
	<!-- Diesel Production -->
	
	<recipe name="Diesel" energyCost="200" allowMissing="true" >
      <input>
        <itemStack modID="minecraft" itemName="cobblestone" slot="0" multiplier="1" />
        <fluidStack modID="immersivepetroleum" name="gasoline" multiplier="4" />
      </input>
      <output>
        <fluidStack modID="immersivepetroleum" name="diesel" />
      </output>
    </recipe>
	
	<!-- Crude Oil Production -->
		
	<recipe name="Crude_Oil" energyCost="200" allowMissing="true" >
      <input>
        <itemStack modID="minecraft" itemName="gravel" slot="0" multiplier="1" />
      	<fluidStack modID="immersivepetroleum" name="oil" multiplier="8" />
      </input>
      <output>
        <fluidStack modID="ThermalFoundation" name="crude_oil" />
      </output>
    </recipe>

	<!-- Creosote Production -->
	
	<recipe name="Creosote" energyCost="200" allowMissing="true" >
      <input>
        <itemStack modID="minecraft" itemName="gravel" slot="0" multiplier="1" />
        <fluidStack modID="immersivepetroleum" name="lubricant" multiplier="2" />
      </input>
      <output>
        <fluidStack modID="ThermalFoundation" name="creosote" />
      </output>
    </recipe>	

	<!-- Rocket_Fuel -->
	
	<recipe name="Rocket_Fuel" energyCost="200" allowMissing="true" >
      <input>
        <itemStack modID="immersivepetroleum" itemName="material" slot="0" multiplier="2" />
        <fluidStack modID="immersivepetroleum" name="diesel" multiplier="4" />
      </input>
      <output>
        <fluidStack name="rocket_fuel" />
      </output>
    </recipe>	
	</recipeGroup>


</VatRecipes>
